<div class="mt-8">
  <h3 class="text-2xl font-bold mb-4">Available Venues</h3>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    {{#each venues as |venue|}}
      <div class="bg-white p-4 rounded shadow mb-4">
        <h4 class="text-sm"><a href="/venueprofile/{{venue.id}}" class="text-blue-500 hover:underline">{{venue.name}}</a></h4>
        <p class="text-gray-600 text-lg font-bold">{{venue.genre}}</p>
      </div>
    {{/each}}
  </div>
</div>

