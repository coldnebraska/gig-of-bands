<div class="col-md-6">
  <h2>Signup</h2>
  <button class="signup-btn" id="performer-signup-btn">Performer Signup</button>
  <button class="signup-btn" id="venue-signup-btn">Venue Signup</button>

  <form class="form signup-form hidden" id="band">
    <div class="form-group">
      <label for="band-name-signup">Band Name:</label>
      <input class="form-input" type="text" id="band-name-signup" />
    </div>
    <div class="form-group">
      <label for="band-genre-signup">Genre:</label>
      <input class="form-input" type="text" id="band-genre-signup" />
    </div>
    <div class="form-group">
      <label for="band-username-signup">Username:</label>
      <input class="form-input" type="text" id="band-username-signup" />
    </div>
    <div class="form-group">
      <label for="band-password-signup">Password:</label>
      <input class="form-input" type="password" id="band-password-signup" />
    </div>
  </form>
  
  <form class="form signup-form hidden" id="venue">
    <div class="form-group">
      <label for="venue-name-signup">Venue Name:</label>
      <input class="form-input" type="text" id="venue-name-signup" />
    </div>
    <div class="form-group">
      <label for="venue-username-signup">Username:</label>
      <input class="form-input" type="text" id="venue-username-signup" />
    </div>
    <div class="form-group">
      <label for="venue-password-signup">Password:</label>
      <input class="form-input" type="password" id="venue-password-signup" />
    </div>
  </form>
</div>

<script src="./js/signup.js"></script>
